<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/bg_second">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello There!"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#2f3a4e"
            android:layout_marginStart="56dp"/>

        <EditText
            android:id="@+id/email_login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@drawable/input_curved"
            android:paddingVertical="11dp"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="56dp"
            android:hint="Email"
            android:textColor="#2f3a4e"
            android:textColorHint="#2f3a4e"/>
        <EditText
            android:id="@+id/password_login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@drawable/input_curved"
            android:paddingVertical="11dp"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="56dp"
            android:hint="Password"
            android:textColor="#2f3a4e"
            android:textColorHint="#2f3a4e"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_login_login_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_curved"
                android:text="Login"
                android:textAllCaps="false"
                android:paddingHorizontal="50dp"
                android:paddingVertical="9dp"
                android:textSize="16sp"
                android:textColor="#2f3a4e"
                android:layout_marginStart="56dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/help_login_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need Help?"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textColor="#d61870"
                android:layout_marginStart="48dp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are not a member?"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/register_login_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register."
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView_login"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textColor="#d61870"
        android:layout_marginStart="4dp" />



</RelativeLayout>