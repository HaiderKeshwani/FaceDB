<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_second">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_back_register"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:background="@drawable/button_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#2f3a4e"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <EditText
        android:id="@+id/firstname_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="@drawable/input_curved"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="56dp"
        android:hint="First Name"
        android:maxLength="30"
        android:inputType="textPersonName|textCapWords"
        android:textColor="#2f3a4e"
        android:textColorHint="#2f3a4e"/>
    <EditText
        android:id="@+id/lastname_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="@drawable/input_curved"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="56dp"
        android:hint="Last Name"
        android:maxLength="20"
        android:inputType="textPersonName|textCapWords"
        android:textColor="#2f3a4e"
        android:textColorHint="#2f3a4e"/>
    <EditText
        android:id="@+id/dob_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="@drawable/input_curved"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="56dp"
        android:hint="Date of Birth (mm/dd/yyyy)"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#2f3a4e"
        android:textColorHint="#2f3a4e"/>
    <EditText
        android:id="@+id/email_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="@drawable/input_curved"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="56dp"
        android:hint="Email"
        android:textColor="#2f3a4e"
        android:textColorHint="#2f3a4e"/>
    <EditText
        android:id="@+id/empid_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="@drawable/input_curved"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="56dp"
        android:hint="Employee Id"
        android:maxLength="15"
        android:textColor="#2f3a4e"
        android:textColorHint="#2f3a4e"/>
    <EditText
        android:id="@+id/mobno_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="@drawable/input_curved"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="56dp"
        android:hint="Mobile Number"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="#2f3a4e"
        android:textColorHint="#2f3a4e"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Photo"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#2f3a4e"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="2dp"
        android:src="@drawable/profile_image"
        android:scaleType="centerInside"
        android:onClick="placeImage"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="1dp"
        android:src="@drawable/profile_camera"
        android:layout_alignBottom="@+id/img_profile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:onClick="placeImage"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit_register_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_curved"
        android:text="Submit"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="9dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="#2f3a4e"/>
</LinearLayout>